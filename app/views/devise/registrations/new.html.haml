.row
  .col-sm-12.text-center
    %h2 Sign up
.row
  .col-sm-8.col-sm-offset-2
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'form-horizontal'}) do |f|

      = devise_error_messages!

      .form-group
        %label.col-sm-3.control-label
          = f.label :email
        .col-sm-5
          = f.text_field :email, placeholder: 'Email', class: 'form-control', autofocus: true

      .form-group
        %label.col-sm-3.control-label
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
        .col-sm-5
          = f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: 'off'

      .form-group
        %label.col-sm-3.control-label
          = f.label :password_confirmation
        .col-sm-5
          = f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control', autocomplete: 'off'

      .form-group.actions
        %label.col-sm-3.control-label
        .col-sm-5
          = f.submit 'Sign up', class: 'btn btn-success'
          %br
          = render 'devise/shared/links'
