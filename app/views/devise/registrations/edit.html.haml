.row
  .col-sm-12.text-center
    %h2 Edit #{resource_name.to_s.humanize}
.row
  .col-sm-8.col-sm-offset-2
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', method: :put}) do |f|

      = devise_error_messages!

      .form-group
        %label.col-sm-3.control-label
          Email
        .col-sm-5
          = f.text_field :email, placeholder: 'Email', class: 'form-control', autofocus: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}

      .form-group
        %label.col-sm-3.control-label
          = f.label :password
          %i (leave blank if you don't want to change it)
        .col-sm-5
          = f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: 'off'

      .form-group
        %label.col-sm-3.control-label
          = f.label :password_confirmation
        .col-sm-5
          = f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control', autocomplete: 'off'

      .form-group
        %label.col-sm-3.control-label
          = f.label :current_password
        .col-sm-5
          = f.password_field :current_password, placeholder: 'Current Password', class: 'form-control', autocomplete: 'off'

      .form-group.actions
        %label.col-sm-3.control-label
        .col-sm-5
          = f.submit 'Update', class: 'btn btn-success'
          %br
          = render 'devise/shared/links'

.row
  .col-sm-12
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}

    = link_to 'Back', :back
